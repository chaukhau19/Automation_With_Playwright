pipeline {
    agent {
        docker { image 'node:18.20.4-alpine3.20' }
    }
    environment {
        GITHUB_URL = 'https://github.com/chaukhau19/Automation_With_Playwright.git'
        REPO_NAME = 'BusaiGPT'
        FILE_SH = 'BS_Auto.sh'
        FILE_BAT = 'BS_Auto.bat'
        COMMAND = 'npx playwright test BS_Actions.spec.js --headed --reporter=line --workers=1'
        SERVER_PATH = "Automation_With_Playwright/${REPO_NAME}"
        BRANCH_NAME = 'master'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: "${BRANCH_NAME}", url: "${GITHUB_URL}"
                echo "Code checked out from ${BRANCH_NAME}"

                // Print the current working directory
                echo 'Current working directory:'
                sh 'pwd'

                // Find the location of the Friendify directory and print it
                echo "Finding ${REPO_NAME} directory:"
                sh "find . -type d -name '${REPO_NAME}'"

                // Change directory to Friendify and list its contents
                echo "Changing directory to ${REPO_NAME} and listing contents:"
                sh """
                    cd \$(find . -type d -name '${REPO_NAME}')
                    pwd
                    ls -la
                """
            }
        }

        stage('Setup Dependencies') {
            steps {
                echo 'Setting up dependencies'
                script {
                    sh """
                        cd \$(find . -type d -name 'Automation_With_Playwright')
                        rm -rf node_modules package-lock.json
                        npm install  // Install dependencies
                        npx playwright install  // Install Playwright browser binaries
                    """
                }
            }
        }


        stage('Verify Playwright Installation') {
            steps {
                echo 'Verifying Playwright Installation'
                script {
                    sh 'node -v'  // Check Node.js version
                    sh 'npm -v'   // Check npm version
                    sh 'npx playwright --version'  // Verify Playwright installation
                }
            }
        }

        stage('Search for BS_Auto.sh Script') {
            steps {
                echo 'Searching for BS_Auto.sh'
                script {
                    def findCommand = "find . -name '${FILE_SH}'"
                    def findResult = sh(script: findCommand, returnStdout: true).trim()
                    if (findResult) {
                        echo "${FILE_SH} found at: ${findResult}"
                        env.RUN_TESTS = 'true'
                    } else {
                        echo "${FILE_SH} not found, skipping tests."
                        env.RUN_TESTS = 'false'
                    }
                }
            }
        }

        stage('CI: Run Tests') {
            when {
                expression { return env.RUN_TESTS == 'true' }  // Run tests only if script was found
            }
            steps {
                echo 'Starting Tests'
                script {
                    if (isUnix()) {
                        // Navigate to the ${REPO_NAME} directory before running the command
                        sh """
                            cd \$(find . -type d -name '${REPO_NAME}')
                            ${COMMAND}
                        """
                    } else {
                        // Navigate to the ${REPO_NAME} directory on Windows before running the command
                        bat """
                            cd ${REPO_NAME}
                            ${COMMAND}
                        """
                    }
                }
                echo "Tests executed"
            }
        }


        stage('Archive Test Results') {
            steps {
                archiveArtifacts artifacts: '**/playwright-report/**/*', allowEmptyArchive: true
                echo 'Test results archived.'
            }
        }
    }

    post {
        always {
            script {
                def status = currentBuild.result ?: 'SUCCESS'
                echo "Build status: ${status}"
                if (isUnix()) {
                    // Check if temporary folder exists before deleting
                    if (fileExists("${SERVER_PATH}/temp")) {
                        sh "rm -rf ${SERVER_PATH}/temp/*"
                    } else {
                        echo "Temporary folder does not exist."
                    }
                } else {
                    bat "if exist ${SERVER_PATH}\\temp\\* del /Q ${SERVER_PATH}\\temp\\*"
                }
            }
        }
    }
}
