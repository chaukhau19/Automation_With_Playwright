pipeline {
    agent any
    environment {
        // Github
        GITHUB_URL = 'https://github.com/chaukhau19/Automation_With_Playwright.git'
        REPO_NAME = 'BusaiGPT'
        FILE_SH = 'BS_Auto.sh'
        FILE_BAT = 'BS_Auto.bat'
        SERVER_PATH = "Automation_With_Playwright/${REPO_NAME}"  // Đường dẫn đến thư mục chứa test
        BRANCH_NAME = 'master'
    }
    stages {
        stage('Checkout code') {
            steps {
                // Tải code từ nhánh 'master' của GitHub
                git branch: "${BRANCH_NAME}", url: "${GITHUB_URL}"
                echo "Code checked out from ${BRANCH_NAME}"
            }
        }
        stage('CI: Run Tests') {
            steps {
                echo 'Starting Tests'
                dir("${SERVER_PATH}") {
                    script {
                        if (isUnix()) {
                            sh "./${FILE_SH}"  // Chạy file .sh trên hệ điều hành Unix-based
                        } else {
                            bat "${FILE_BAT}"  // Chạy file .bat trên hệ điều hành Windows
                        }
                    }
                }
                echo "Tests executed"
            }
        }
    }
    post {
        always {
            script {
                def status = currentBuild.result ?: 'SUCCESS'
                echo "Build status: ${status}"
                // Xóa các tệp không cần thiết sau khi build
                sh "rm -rf ./* ./.??*"
            }
        }
    }
}
