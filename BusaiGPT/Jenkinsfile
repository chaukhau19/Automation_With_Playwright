pipeline {
    agent any
    environment {
        GITHUB_URL = 'https://github.com/chaukhau19/Automation_With_Playwright.git'
        REPO_NAME = 'BusaiGPT'
        FILE_SH = 'Automation_With_Playwright/BusaiGPT/BS_Auto.sh'
        FILE_BAT = 'Automation_With_Playwright/BusaiGPT/BS_Auto.bat'
        SERVER_PATH = "Automation_With_Playwright/${REPO_NAME}"
        BRANCH_NAME = 'master'
    }
    stages {
        stage('Checkout code') {
            steps {
                git branch: "${BRANCH_NAME}", url: "${GITHUB_URL}"
                echo "Code checked out from ${BRANCH_NAME}"
            }
        }
        stage('Find BS_Auto.sh') {
            steps {
                echo 'Searching for BS_Auto.sh'
                script {
                    // Tìm vị trí của file BS_Auto.sh và in ra log
                    def findCommand = 'find . -name "BS_Auto.sh"'
                    def findResult = sh(script: findCommand, returnStdout: true).trim()
                    echo "BS_Auto.sh found at: ${findResult}"
                }
            }
        }
    //     stage('CI: Run Tests') {
    //         steps {
    //             echo 'Starting Tests'
    //             script {
    //                 if (isUnix()) {
    //                     // Cấp quyền thực thi và chạy file .sh nếu tìm thấy
    //                     sh "chmod +x ${FILE_SH}"
    //                     sh "./${FILE_SH}"
    //                 } else {
    //                     bat "${FILE_BAT}"  // Chạy file .bat
    //                 }
    //             }
    //             echo "Tests executed"
    //         }
    //     }
    // }
    post {
        always {
            script {
                def status = currentBuild.result ?: 'SUCCESS'
                echo "Build status: ${status}"
                sh "rm -rf Automation_With_Playwright/${REPO_NAME}/temp/*"
            }
        }
    }
}
