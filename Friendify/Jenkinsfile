pipeline {
    agent {
        docker { image 'node:18.20.4-alpine3.20' }
    }
    environment {
        GITHUB_URL = 'https://github.com/chaukhau19/Automation_With_Playwright.git'
        REPO_NAME = 'Friendify'
        FILE_SH = 'Friendify/FD_Auto.sh'
        FILE_BAT = 'Friendify/FD_Auto.bat'
        COMMAND_1 = 'npx playwright test FD_Register.spec.js --headed --reporter=line --workers=1'
        COMMAND_2 = 'npx playwright test FD_Login.spec.js --headed --reporter=line --workers=1'
        COMMAND_3 = 'npx playwright test FD_Actions.spec.js --headed --reporter=line --workers=1'
        SERVER_PATH = "Automation_With_Playwright/${REPO_NAME}"
        BRANCH_NAME = 'master'
        JENKINS_HOME = "/var/jenkins_home/workspace/AUTOMATION_FRIENDIFY_master/${REPO_NAME}"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: "${BRANCH_NAME}", url: "${GITHUB_URL}"
                echo "Code checked out from ${BRANCH_NAME}"

                echo 'Current working directory:'
                sh 'pwd'

                echo "Finding ${REPO_NAME} directory:"
                script {
                    def repoPath = sh(script: "find . -type d -name '${REPO_NAME}'", returnStdout: true).trim()
                    echo "Found ${REPO_NAME} at: ${repoPath}"
                    env.REPO_PATH = repoPath
                }

                echo "Changing directory to ${REPO_NAME} and listing contents:"
                sh """
                    cd ${env.REPO_PATH}
                    pwd
                    ls -la
                    ls -la /home/node/.cache/ms-playwright/
                    ls -la /home/node/.cache/ms-playwright/chromium-1134/chrome-linux/
                """
            }
        }

        stage('Setup Dependencies') {
            steps {
                echo 'Setting up dependencies'
                script {
                    sh """
                        cd ${env.REPO_PATH}
                        rm -rf node_modules package-lock.json
                        npm install
                        npx playwright install --with-deps
                    """
                }
            }
        }

        stage('Verify Playwright Installation') {
            steps {
                echo 'Verifying Playwright Installation'
                script {
                    sh 'node -v' 
                    sh 'npm -v'   
                    sh 'npx playwright --version'  
                }
            }
        }

        stage('Search for FD_Auto.sh Script') {
            steps {
                echo 'Searching for FD_Auto.sh'
                script {
                    def findCommand = "find . -name '${FILE_SH}'"
                    def findResult = sh(script: findCommand, returnStdout: true).trim()
                    if (findResult) {
                        echo "${FILE_SH} found at: ${findResult}"
                        env.RUN_TESTS = 'true'
                    } else {
                        echo "${FILE_SH} not found, skipping tests."
                        env.RUN_TESTS = 'false'
                    }
                }
            }
        }

        stage('CI: Run Tests') {
            steps {
                echo 'Starting Tests'
                script {
                    if (isUnix()) {
                        sh """
                            cd ${env.REPO_PATH}
                            ${COMMAND_1}
                            ${COMMAND_2}
                            ${COMMAND_3}
                        """
                    } else {
                        bat """
                            cd ${env.REPO_PATH}
                            ${COMMAND_1}
                            ${COMMAND_2}
                            ${COMMAND_3}
                        """
                    }
                }
                echo "Tests executed"
            }
        }

        stage('Archive Test Results') {
            steps {
                archiveArtifacts artifacts: '**/playwright-report/**/*', allowEmptyArchive: true
                echo 'Test results archived.'
            }
        }
    }

    post {
        always {
            script {
                def status = currentBuild.result ?: 'SUCCESS'
                echo "Build status: ${status}"
                if (isUnix()) {
                    if (fileExists("${SERVER_PATH}/temp")) {
                        sh "rm -rf ${SERVER_PATH}/temp/*"
                    } else {
                        echo "Temporary folder does not exist."
                    }
                } else {
                    bat "if exist ${SERVER_PATH}\\temp\\* del /Q ${SERVER_PATH}\\temp\\*"
                }
            }
        }
    }
}
